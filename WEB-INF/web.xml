<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <servlet>
    <servlet-name>tambah-barang.jsp</servlet-name>
    <jsp-file>/tambah-barang.jsp</jsp-file>
    <multipart-config>
      <max-file-size>10485760</max-file-size> <!-- 10MB -->
      <max-request-size>20971520</max-request-size> <!-- 20MB -->
      <file-size-threshold>0</file-size-threshold>
    </multipart-config>
  </servlet>
  <servlet-mapping>
    <servlet-name>tambah-barang.jsp</servlet-name>
    <url-pattern>/tambah-barang.jsp</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>edit-barang</servlet-name>
    <jsp-file>/edit-barang.jsp</jsp-file>
    <multipart-config>
        <max-file-size>10485760</max-file-size> <!-- 10MB -->
        <max-request-size>20971520</max-request-size> <!-- 20MB -->
        <file-size-threshold>0</file-size-threshold>
    </multipart-config>
  </servlet>
  <servlet-mapping>
    <servlet-name>edit-barang</servlet-name>
    <url-pattern>/edit-barang.jsp</url-pattern>
  </servlet-mapping>

</web-app>